int main ()
{

    int a,b;
    float ort;

    printf("Lutfen 2 Rakam Giriniz\n");
    scanf("%d %d",&a,&b);

    ort=(float) (a+b) / 2 ;

    printf("iki sayinin ortalamasi %.2f\n",ort);
    scanf("%d",&ort);
    return 0;
}



