int a[5][5]={{1,3,5,6,7},{9,8,7,5,4},{5,4,7,9,2},{5,1,9,4,6},{1,9,0,3,7}};
        int ara,i,j;
        for(i=0;i<5;i++){
        for(j=0;j<5;j++){
        printf("%3d",a[i][j]);
        }
        printf("\n");
    }
    printf("\n");
    
    for(i=0;i<5;i++){
    for(j=0;j<5;j++){
            if(i<j){
                ara=a[i][j];
                a[i][j]=a[j][i];
                a[j][i]=ara;
            }
                printf("%3d",a[i][j]);
                }
                printf("%\n");
            }
	Dizilerde sıralı 2 diziyi birleştirme

#include <stdio.h>
#include <stdlib.h>
#include <time.h>
 
#define dizi    10
 
int main()
{
    int a[dizi];
    int b[dizi];
    int c[dizi + dizi];
    int k;
    int index1 = 0, index2 = 0;
 
    srand(time(0));
    /* sıralı rastgele diziler olusturuluyor  */
    a[0] = rand() % 10;
    b[0] = rand() % 10;
 
    for (k = 1; k < dizi; ++k) {
        a[k] = rand() % 10 + a[k - 1];
        b[k] = rand() % 10 + b[k - 1];
    }
    /* sıralı rastgele diziler birlestiriliyor  */
 
    for (k = 0; k < dizi + dizi; ++k)
        if (index1 == dizi)
            c[k] = b[index2++];
        else if (index2 == dizi)
            c[k] = a[index1++];
        else {
            if (a[index1] < b[index2])
                c[k] = a[index1++];
            else
                c[k] = b[index2++];
        }   
 
 
    /* birinci sıralı dizi yazdırılıyor */
    for (k = 0; k < dizi; ++k) 
        printf("%d ", a[k]);
    printf("\n**************************************************\n");
 
    /* ikinci sıralı dizi yazdırılıyor */
    for (k = 0; k < dizi; ++k) 
        printf("%d ", b[k]);
    printf("\n**************************************************\n");
 
    /* birlestirilmis dizi yazdırılıyor */
    for (k = 0; k < dizi + dizi; ++k)   
        printf("%d ", c[k]);
    printf("\n**************************************************\n");
    getchar();
    return 0;
}

Dizilerde sıralı 2 diziyi birleştirme 2

void birlestir(int a[],int b[],int c[],int n, int m){
	int i=0 ,j=0;
	while(i<m && j<n){
		if(a[i]<=b[j]){
		c[sayac++]=a[i++];
		}
		else{
		c[sayac++]=b[j++];
		}
	}	
		while(j<m){
		c[sayac++]=b[j++];
		}
			while(j<n){
			c[sayac++]=a[i++];
			}
	
}
int main()
{
    int a[]={1,3,8,13};
    int ua=4;
	int b[]={2,6,23,25,58};
	int ub=5;
	int c[ua+ub];
	birlestir(a,b,c,ua,ub);
	for(i=0;i<ua+ub;i++)
		printf("&d",c[i]);
    getchar();
    return 0;
}

matris hesaplama:
#include <stdio.h>
#include <stdlib.h>

int main(int argc, char *argv[])
{
int matris1X=0, matris1Y=0, matris2X=0, matris2Y=0;

printf(“Ilk matrisin boyutlarini giriniz?(Örn: 3 4) :”);
scanf(“%d%d”,&matris1X,&matris1Y);
printf(“Ikinci matrisin boyutlarini giriniz?(Örn: 4 5) :”);
scanf(“%d %d”,&matris2X,&matris2Y);

if(matris1Y != matris2X) printf(“Matris carpimi icin boyutlar uygun degil.\n”);
else if(matris1X<2 || matris1Y<2 || matris2X<2 || matris2Y<2) printf(“Boyutlar 2’den kucuk olamaz.\n”);
else{
int matris1[matris1X][matris1Y], matris2[matris2X][matris2Y], carpimMatrisi[matris1X][matris2Y];
int i,j,k,topla;
//Matris1 değerlerinin alınması.
for(i=0;i<matris1X;i++)
{
for(j=0;j<matris1Y;j++){
printf(“Matris1[%d][%d]:”,i+1,j+1);
scanf(“%d”,&matris1[i][j]);
}
}
//Matris2 değerlerinin alınması.
for(i=0;i<matris2X;i++)
{
for(j=0;j<matris2Y;j++){
printf(“Matris2[%d][%d]:”,i+1,j+1);
scanf(“%d”,&matris2[i][j]);
}
}
system(“CLS”);
//Matris çarpımı
for(i=0;i<matris1X;i++)
{
for(j=0;j<matris2Y;j++)
{
topla=0;
for(k=0;k<matris1Y;k++) topla = topla + matris1[i][k]*matris2[k][j];
carpimMatrisi[i][j]=topla;
printf(“Carpim Matrisi[%d][%d] = %d “,i+1,j+1,carpimMatrisi[i][j]);
}
printf(“\n”);
}
}

system(“PAUSE”);
return 0;
}
