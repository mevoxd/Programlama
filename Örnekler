 Sayi basamaklarına ayırma 
 
 int sayi;
int a;
int sayac=0;
    printf("Bir sayi girin");
    scanf("%d",&sayi);
    while(sayi>0){
        a=sayi%10;
        sayi=sayi/10;
        sayac++;
        printf("%d .basamak %d \n",sayac,a);
        }
	
2 boyutlu diziye atama yapma

int i,j,a[10][3];
  for(i=0;i<10;i++){
        for(j=0;j<3;j++){
            a[i][j]=i+j;
            printf("%d  ",a[i][j]);
            }
            printf("\n");
            
        }
	
	
Asal sayı bulma kodu

int i,sayi,sayac=0;
printf("Sayiyi girin : ");
scanf("%d",&sayi);
for(i=2;i<sayi;i++)
    {
       if(sayi%i==0)
       {
           sayac++;
       }    
    }  
if(sayac==0)
    {
        printf("Asal");                    
    }
    else
    {
        printf("Asal degil"); 
    }
Carpim Tablosu

  int i,j;
    for(i=1;i<11;i++){
        printf("\n");
        for(j=1;j<11;j++){
                printf("%4d",j*i);
            }
        
        }

Dizilerde Siralama

int i,j,ara,a[5];
    for(i=0;i<4;i++){
        for(j=0;j<=4-i;j++){
            if(a[i]>a[i+1]){
                ara=a[i];
                a[i]=a[i+1];
                a[i+1]=ara;
                }
            }
        }
    
Dizilerde diagonal Yer değiştirme 

int a[5][5]={{1,3,5,6,7},{9,8,7,5,4},{5,4,7,9,2},{5,1,9,4,6},{1,9,0,3,7}};
        int ara,i,j;
        for(i=0;i<5;i++){
        for(j=0;j<5;j++){
        printf("%3d",a[i][j]);
        }
        printf("\n");
    }
    printf("\n");
    
    for(i=0;i<5;i++){
    for(j=0;j<5;j++){
            if(i<j){
                ara=a[i][j];
                a[i][j]=a[j][i];
                a[j][i]=ara;
            }
                printf("%3d",a[i][j]);
                }
                printf("%\n");
            }
